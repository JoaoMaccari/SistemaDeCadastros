@model ContatoModel
@{
    ViewData["Title"] = "Confirmação de apagar contato";

}


<div class="text-center">
    <h3>Deseja realmente apagar o contato @Model.Nome:
        ?
    </h3>
</div>

<a class="btn btn-primary d-block mt-4" role="button" asp-controller="Contato"asp-action="Index" >Cancelar exclusão </a>
<br />
<a class="btn btn-danger d-block" role="button" asp-controller="Contato" asp-action="Apagar" asp-route-id="@Model.Id"> Exclusão</a>