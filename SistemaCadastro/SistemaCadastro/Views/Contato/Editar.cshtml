@{
    ViewData["Title"] = "Editar Contato";
}


<div class="text-center">


    <h1 class="display-4">Editar contato</h1>


    <form>
  <div class="mb-3">
    <label for="nome" class="form-label">Nome</label>
    <input type="text" class="form-control"  placeholder="Digite seu nome do contato">
  </div>

   <div class="mb-3">
    <label for="celular" class="form-label">Celular</label>
    <input type="text" class="form-control"  placeholder="Digite o celular do contato">

  </div>


  <button type="submit" class="btn btn-primary">Alterar</button>
  <a class="btn btn-secondary d-block " asp-controller="Contato" asp-action="Index" role="button">Voltar</a>
</form>



</div>
