@using SistemaCadastro.Enums;
@model UsuarioModel

@{
    ViewData["Title"] = "Criar usuário";
}



<div class="text-center">


    <h1 class="display-4">Editar usuário</h1>


 <form asp-controller="Usuario" asp-action="Alterar" method="post">

     <input type="hidden" asp-for="Id"/>
  <div class="mb-3">
    <label for="nome" class="form-label">Nome</label>
    <input type="text" class="form-control" asp-for="Nome"  placeholder="Digite seu nome">
            @Html.ValidationMessageFor(x => x.Nome)
  </div>

  <div class="mb-3">
    <label for="email" class="form-label">E-mail</label>
    <input type="text" class="form-control" asp-for="Email"  placeholder="Digite seu e-mail">
            @Html.ValidationMessageFor(x => x.Email)
  </div>

   <div class="mb-3">
    <label for="nome" class="form-label">Login</label>
    <input type="text" class="form-control" asp-for="Login"  placeholder="Digite seu login">
            @Html.ValidationMessageFor(x => x.Login)

  </div>

      <div class="mb-3">
            <label for="nome" class="form-label">Perfil</label>

            <select asp-for="Perfil" class="form-control"> 
                <option value="">Selecione</option>
                <option value="@PerfilEnum.Adimin" >Administrador</option>
                <option value="@PerfilEnum.Padrao">Padrão</option>
            </select>
            @Html.ValidationMessageFor(x => x.Perfil)

      </div>



  <button type="submit" class="btn btn-primary">Editar</button>
  <a class="btn btn-secondary d-block " asp-controller="Usuario" asp-action="Index" role="button">Voltar</a>
</form>



</div>
